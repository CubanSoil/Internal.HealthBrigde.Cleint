@model IEnumerable<Internal.HealthBrigde.Cleint.Models.Patient>

@{
    ViewBag.Title = "Patient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Patients</h2>

<p>
    @Html.ActionLink("New Customer", "New", "Patients", null, new { @class = "btn btn-primary" })
</p>


<table id="patients" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>ID Number</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#patients").DataTable({
                ajax: {
                    url: "/api/patients",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "FirstName",
                        render: function(data, type, patient) {
                            return "<a href='/patients/edit/" + patient.PatientId + "'>" + patient.FirstName + "</a>";
                        }
                    },
                    {
                        data: "LastName"
                    },
                    {
                        data: "IdNumber",
                        render: function(data) {
                            return "<button class='btn-link js-delete' data-patient-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });



            $("#patients").on("click",
                ".js-delete",
                function () {
                    var button = $(this);

                    bootbox.confirm("Are you sure you want to delete this Patient?",
                        function (result) {
                            if (result) {
                                $.ajax({
                                    url: "/api/patients/" + button.attr("data-patient-id"),
                                    method: "DELETE",
                                    success: function () {
                                        table.row(button.parents("tr")).remove().draw();
                                    }
                                });
                            }
                        });
                });
        });

    </script>
}
